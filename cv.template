<!doctype html>
<html>
	<head>
		<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" href="cv.css">
		<title>{{ person.name }} - {{ person.position }}</title>
	</head>
	<body>
		<div class="personal">
			<h1 class="name">{{ person.name }}</h1>
			<p class="position">{{ person.position }}</p>
			<p class="statement">{{ person.statement }}</p>
		</div>

		<div class="section highlights">
			<h2>Highlights</h2>
			<ul>
			{% for highlight in highlights %}
				<li>{{ highlight }}</li>
			{% endfor %}
			</ul>
		</div>

		<div class="section projects">
			<h2>Projects</h2>
			{% for project in projects %}
				<div class="project">
					<h3 class="name">{{ project.name }}</h3>
					<p class="time">{{ project.timeframe.from }} &mdash; {{ project.timeframe.to }}</p>
					{% if project.url %}
						{% if project.sourceUrl %}
							<p>Link: <a href="{{ project.url }}">{{ project.url }}</a> (source code: <a href="{{ project.sourceUrl }}">{{ project.sourceUrl }}</a>)</p>
						{% else %}
							<p>Link: <a href="{{ project.url }}">{{ project.url }}</a></p>
						{% endif %}
					{% endif %}
					<p class="description">{{ project.description }}</p>
					<p>Responsibilities:</p>
					<ul>
					{% for responsibility in project.responsibilities %}
						<li>{{ responsibility }}</li>
					{% endfor %}
					</ul>
					<p class="keywords">Keywords: {{ project.keywords }}</p>
				</div>
			{% endfor %}
		</div>
	</body>
</html>